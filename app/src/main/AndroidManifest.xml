<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.newstand.datamigration">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".DataMigrationApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.NavigatorActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ContentProviderCategoryViewerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.BackupSessionPickerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.BackupCategoryViewerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.DataListHostActivity"
            android:theme="@style/AppTheme" />

        <service android:name=".service.DataSelectionKeeperService" />

        <activity
            android:name=".ui.activity.DataTransportActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>