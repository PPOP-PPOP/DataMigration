<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.newstand.datamigration">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:name=".DataMigrationApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.NavigatorActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.AndroidCategoryViewerActivity"
            android:label="@string/title_backup"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.SenderCategoryViewerActivity"
            android:label="@string/title_transport_sender"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.BackupSessionPickerActivity"
            android:label="@string/title_restore"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.BackupCategoryViewerActivity"
            android:label="@string/title_restore"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.DataListHostActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.activity.DataImportActivity"
            android:label="@string/title_restore_import"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.activity.DataExportActivity"
            android:label="@string/title_backup_export"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.activity.WFDDataSenderActivity"
            android:label="@string/title_setup_wfd" />

        <activity
            android:name=".ui.activity.WFDDataReceiverActivity"
            android:label="@string/title_setup_wfd" />

        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/action_settings" />

        <activity android:name=".ui.activity.DataSenderActivity" />
        <activity android:name=".ui.activity.DataReceiverActivity" />
    </application>

</manifest>