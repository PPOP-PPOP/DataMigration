<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.newstand.datamigration.ui.widget.CheckableImageView
            android:id="@+id/checkable_img_view"
            android:layout_width="@dimen/thumbnail_size"
            android:layout_height="@dimen/thumbnail_size"
            android:layout_margin="@dimen/activity_horizontal_margin_small"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@android:id/title"
            style="@style/ListItemMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/checkable_img_view"
            android:layout_toRightOf="@+id/checkable_img_view"
            android:text="@string/app_intro" />

    </RelativeLayout>

    <TextView
        android:id="@android:id/text1"
        style="@style/ListItemSecondaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/large_text" />

    <FrameLayout
        android:id="@+id/img_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/extra_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop" />

    </FrameLayout>
</LinearLayout>